<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IT Tools Clone</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css">
</head>

<body class="bg-gray-900 text-white">
  <div class="flex">
    <!-- Sidebar -->
      <aside class="w-64 h-screen bg-gray-800 p-5">
        <a href="/">
          <h1 class="text-2xl font-bold text-green-400">IT - TOOLS</h1>
          <p class="text-sm text-gray-400">Handy tools for developers</p>
        </a>
      <h1 class="text-xl text-white mt-4 mb-2">Danh sách danh mục</h1>

      <ul class="text-gray-300">
          {{#categories}}
          <li class="mb-3">
              <!-- Danh mục -->
              <div class="flex justify-between items-center cursor-pointer" onclick="toggleTools({{categoryId}})">
              <span class="text-lg font-semibold">{{categoryName}}</span>
              </div>

              <!-- Tools trong danh mục -->
              <ul id="tools-{{categoryId}}" class="mt-2 ml-5 space-y-1">
              {{#tools}}
                  <li class="text-sm text-gray-400 hover:text-white">{{toolName}}</li>
              {{/tools}}
              </ul>
          </li>
          {{/categories}}
      </ul>
      </aside>


    <!-- Main content -->
    <main class="flex-1 p-5">
      <!-- Header with Search and Buttons -->
      <div class="flex justify-between mb-8">
        <input type="text" placeholder="Search" class="w-2/3 p-2 rounded-lg bg-gray-800 text-white">
        <div class="flex gap-4">
          <a class="bg-gray-700 px-4 py-2 rounded-lg hover:bg-gray-600" href="/login">Login</a>
          <a class="bg-gray-700 px-4 py-2 rounded-lg hover:bg-gray-600" href="/register">Register</a>
        </div>
      </div>

      <h2 class="text-xl font-semibold mb-5">All the tools</h2>
        <div class="grid grid-cols-3 gap-5">
              {{#tools}}
                <a href={{pathTool}}>
                  <div class="bg-gray-800 p-4 rounded-lg hover:border-green-400 border h-full">
                      <h3 class="text-lg font-semibold">{{toolName}}</h3>
                      <p class="text-sm text-gray-400">{{description}}</p>
                  </div>
              </a>
              {{/tools}}
        </div>
    </main>
  </div>
</body>

<script>
  function toggleTools(categoryId) {
    const toolsList = document.getElementById(`tools-${categoryId}`);
    toolsList.classList.toggle('hidden');
  }
</script>

</html>
